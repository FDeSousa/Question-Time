<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/loader_questionSetSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="No. of Questions:" />

            <TextView
                android:id="@+id/loader_questionsText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:text="Q" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Difficulty:" />

            <TextView
                android:id="@+id/loader_difficultyText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:text="Diff" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Subject:" />

            <TextView
                android:id="@+id/loader_subjectText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:text="Subj" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="Description:" />
            <TextView
                android:id="@+id/loader_descriptionText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:text="Desc" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <Button
            android:id="@+id/loader_confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Load" />
        <Button
            android:id="@+id/loader_cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Exit" />

    </LinearLayout>

</LinearLayout>